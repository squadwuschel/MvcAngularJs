@{
    ViewBag.Title = "Personenliste";
}

<div ng-app="app.person" ng-init="toggleAlarm=true">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>


    <div class="row">

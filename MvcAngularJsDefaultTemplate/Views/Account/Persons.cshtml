        </div>
    </div>
</div>


@section scripts
{
    <script>
        angular.module("app.person", ["ngAnimate"]);

        $("#slideDown").on('click', function(event) {
            $("#slide").slideDown();
        });


        $("#slideUp").on('click', function (event) {
            $("#slide").slideUp();
        });

    </script>



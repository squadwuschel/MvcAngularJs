
@{
    Layout = null;
}

<div class="modal" tabindex="-1" role="dialog" ng-controller="testModalCtrl as myCtrl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" ng-click="$hide()">&times;</button>
                <h4 class="modal-title">Mein custom Modal</h4>
            </div>
            <div class="modal-body">
                Modal Content: {{myCtrl.name}}

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="$hide()">Close</button>
                <button type="button" class="btn btn-primary" ng-click="$hide()">Save changes</button>
            </div>
        </div>
    </div>
</div>
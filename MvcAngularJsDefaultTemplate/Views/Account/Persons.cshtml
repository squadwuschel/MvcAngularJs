            <div class="alert alert-success" ng-if="toggleAlarm">Das ist ein Erfolg</div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="btn btn-default" ng-click="toggleAlarm = !toggleAlarm">Den Alarm Toggeln</div>
            <div class="btn btn-default" id="slideDown">Slide Down</div>
            <div class="btn btn-default" id="slideUp">Slide Up</div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12" id="slide">
